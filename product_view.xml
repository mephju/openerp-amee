<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        
	    
	    
	
	    
	    
	   <record id="view_amee_query" model="ir.ui.view">
            <field name="name">amee.wizard.form</field>
            <field name="model">amee.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Amee">
                    <separator string="AMEE"/>
                    <newline/>
                    <field name="field0" />
                    <field name="field1" />
                    <field name="field2" />
                    <field name="field3" />
                    <field name="field4" />
                    <field name="field5" />
                    <field name="field6" />
                    <field name="field7" />
                    <field name="field8" />
                    <field name="field9" />
                    <field name="field10" />
                    <field name="field11" />
                    <field name="field12" />
                    <field name="field13" />
                    <group col="4" colspan="4">
                        <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button name="query_amee" string="Query EPI from Amee" colspan="1" type="object" icon="gtk-ok" />
                        <field name="product_id" on_change="onchange_product_id(product_id)"/>
                    </group>
                </form>
            </field>
        </record>
        
	
	    <record id="action_amee_query" model="ir.actions.act_window">
    		<field name="name">Query Amee</field>
    		<field name="type">ir.actions.act_window</field>
    		<field name="res_model">amee.wizard</field>
 	   		<field name="view_type">form</field>
    		<field name="view_mode">form</field>
    		
		</record>
	    
        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">product.normal.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page[@string='Descriptions']" position="after">
                		 <page string="LWC-EPI">
                		     <separator string="AMEE"/>
           					<button name="%(amee.action_amee_query)d" string="Test Wizard" type="action" />
                		 </page>
				 </xpath>
               
            </field>
        </record>

        
 
        
         <act_window name="Amee Request"
            res_model="amee.wizard"
            src_model="product.product"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="act_amee_wizard"/>

        
	</data>

</openerp>